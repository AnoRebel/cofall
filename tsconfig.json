{
  "extends": [
    "@tsconfig/node18/tsconfig.json",
    "@vue/tsconfig/tsconfig.json",
    "@vue/tsconfig/tsconfig.dom.json"
  ],
  "include": ["env.d.ts", "src/types/*.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ]
  }
}
